{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "e:/Godot_v4.1.2-stable_mono_win64/Godot_v4.1.2-stable_mono_win64.exe",
            "args": ["--path", "${workspaceRoot}"]
        },
        {
            "name": "Launch (Select Scene)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "e:/Godot_v4.1.2-stable_mono_win64/Godot_v4.1.2-stable_mono_win64.exe",
            "args": ["--path", "${workspaceRoot}", "${command:godot.csharp.getLaunchScene}"]
        },
        {
            "name": "Auto Attach",
            "type": "godot-mono",
            "request": "attach",
            "address": "localhost",
            "port": 6007
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Launch in Editor",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program":"e:/Godot_v4.1.2-stable_mono_win64/Godot_v4.1.2-stable_mono_win64.exe",
            // "program": "env:GODOT4",
            "cwd":"${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "args": ["--path","${workspaceRoot}","--editor"]
        }
    ]
}